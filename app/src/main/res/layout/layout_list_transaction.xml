<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout">

    <TextView
        android:id="@+id/transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="12.05.19 20:15"
        />
    <TextView
        android:id="@+id/transaction_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/transaction_date"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:text="1234$"
        />

    <ImageView
        android:id="@+id/transaction_brand_image"
        android:layout_toEndOf="@id/transaction_amount"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/transaction_last_digits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/transaction_brand_image"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:text="••• 1234"
        />

</RelativeLayout>